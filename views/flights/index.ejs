<%- include('../partials/header') %>

    <table id="list">
        <thead>
          <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No</th>
            <th>Departure Date<br>Time</th>
          </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td> <%= f.airline %></td>
                    <td> <%= f.airport %></td>
                    <td> <%= f.flightNo %></td>
                    <td> <%= f.depart %></td>
                    <td><a href="/flights/<%= f._id %>">Details</a></td>
                </tr>
                <% }); %>
        </tbody>
        </table>
        
<%- include('../partials/footer') %>